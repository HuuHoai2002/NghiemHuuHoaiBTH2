@model NghiemHuuHoaiBTH2.Models.Customer

@{
  ViewData["Title"] = "Edit";
}

<h4 class="py-5">Sửa thông tin Customer</h4>

<div class="row">
  <div class="col-md-4">
    <form method="post" asp-action="Edit">
      <span asp-validation-sumary="ModelOnly"></span>
      <input type="hidden" value="@Model.CustomerID" asp-for="CustomerID" />
      <div class="form-group">
        <label asp-for="CustomerName" class="control-label">Name</label>
        <input asp-for="CustomerName" class="control-label" value="@Model.CustomerName" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" /> |
        <a class="btn btn-success" asp-action="Index">Danh sách Customer</a>
      </div>
    </form>
  </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}