@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" class="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="name">StudentID</label>
                <input type="text" class="form-control" id="name" aria-describedby="" name="StudentID"
                    placeholder="Enter student id">
                <span asp-validation-summary="StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="name">StudentName</label>
                <input type="text" class="form-control" id="name" aria-describedby="" name="StudentName"
                    placeholder="Enter student name">
                <span asp-validation-summary="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="name">Address</label>
                <input type="text" class="form-control" id="name" aria-describedby="" name="Address"
                    placeholder="Enter student name">
                <span asp-validation-summary="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="FacultyID">FacultyID</label>
                <select name="FacultyID" class="form-control" asp-items="ViewBag.FacultyID" id=""></select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </form>
    </div>
</div>
